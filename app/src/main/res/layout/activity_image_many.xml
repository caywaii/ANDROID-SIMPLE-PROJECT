<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ImageMany">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GDSC PHOTOSHOOT"
            android:textSize="50dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="@color/darkerBrown"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's look into your memories"
            android:textSize="20dp"
            android:textStyle="italic"
            android:gravity="center_horizontal"
            android:textColor="@color/safron"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/imageone"
            android:layout_marginLeft="40dp"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/imagethree"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/imagefour"
            android:layout_marginLeft="40dp"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/imagefive"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Go To Albums"

            android:drawableLeft="@drawable/ic_baseline_photo_album_24"
            android:backgroundTint="@color/deepYellow"
            android:id="@+id/btnGoHomeImageMany"/>
    </LinearLayout>

</LinearLayout>