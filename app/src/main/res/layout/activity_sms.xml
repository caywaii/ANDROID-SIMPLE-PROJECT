<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sms">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS"
            android:textSize="100dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/darkerBrown"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short Messaging Service"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:textColor="@color/safron"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter Your Phone Number"
            android:minLines="2"
            android:layout_marginTop="10dp"
            android:background="@drawable/calltext"
            android:padding="15dp"
            android:maxLength="11"
            android:id="@+id/phoneNum"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="Text Message"
            android:minLines="10"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:background="@drawable/calltext"
            android:padding="15dp"
            android:maxLength="150"
            android:id="@+id/message"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1/150"
            android:gravity="end"
            android:id="@+id/counter"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Send Message"
            android:drawableLeft="@drawable/send"
            android:backgroundTint="@color/deepYellow"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btnSend"/>
        <Button
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Go Home"
            android:textStyle="bold"
            android:backgroundTint="@color/goldenBrown"
            android:id="@+id/btnBack"
            />

    </LinearLayout>

</LinearLayout>